<div class="ignore-container row movie-theater-landing">
  <div class="col-xs-12">
    <h1><%= @movie_theater.name %></h1>
    <h4 class="contact-info">
      <%= @movie_theater.address_1 %>, <%= @movie_theater.address_2 %>,
      <%= @movie_theater.city %>, <%= @movie_theater.state %> <%= @movie_theater.zip %> |
      <%= @movie_theater.phone %>
    </h4>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <ul class="list-inline dates-list">
      <% @upcoming_dates.each do |day| %>
      <li>
        <h2 class="date">
          <% if day === Date.today %>
            Today
          <% else %>
            <%= day.strftime("%b %d") %>
          <% end %>
        </h2>
      </li>
      <% end %>
    </ul>
    <hr/>
  </div>
</div>

<div class="row">
<% @movie_theater.movies.each do |movie| %>
    <div class="movie-row col-xs-12">
      <div class="row">
        <div class="col-md-2">
          <%= image_tag movie.image_url, class: 'img-responsive' %>
        </div>
        <div class="col-md-2">
          <h2 class="no-margin-top"><%= movie.name.upcase %></h2>
          <p>Rated: <%= movie.rating %></p>
          <p><%= movie.length_in_minutes %> minutes</p>
        </div>
        <div class="col-md-8">
        <p><%= movie.description %></p>
        <p><em><%= movie.actors %></em></p>
        <hr/>
        <% movie.showings.each do |showing| %>
          <% if showing.time_slot.day == Date.today.day %>
            <%= link_to showing, class: "btn btn-lg time-button" do %>
              <%= showing.time_slot.strftime('%I:%M %p') %>
            <% end %>
          <% end %>
        <% end %>
        </div>
      </div>
    </div>
<% end %>
</div>


