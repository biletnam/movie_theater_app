<div class="page-header">
  <%= link_to movies_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_movie_path(@movie), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show movie</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @movie.name %></dd>

  <dt>Rating:</dt>
  <dd><%= @movie.rating %></dd>

  <dt>Image url:</dt>
  <dd><%= @movie.image_url %></dd>

  <dt>Length in minutes:</dt>
  <dd><%= @movie.length_in_minutes %></dd>

  <dt>Genre:</dt>
  <dd><%= @movie.genre %></dd>

  <dt>Description:</dt>
  <dd><%= @movie.description %></dd>

  <dt>Actors:</dt>
  <dd><%= @movie.actors %></dd>

</dl>
