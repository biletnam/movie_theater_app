<%= form_for(@ticket_offering, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @ticket_offering.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@ticket_offering.errors.count, "error") %> prohibited this ticket_offering from being saved:</h4>

      <ul>
      <% @ticket_offering.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :price, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :price, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :movie_theater_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :movie_theater_id,
        options_from_collection_for_select(MovieTheater.all,'id', 'name'),
        {},
        {:class => 'form-control'} %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn time-button" %>
      <% if @ticket_offering.persisted? %>
        <%= link_to "Delete Ticket Type", @ticket_offering, method: :delete,
            class: "btn time-button", data: { confirm: 'Are you sure?' } %>
      <% end %>
    </div>
  </div>
<% end %>
