<%= form_for(@booking, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @booking.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being saved:</h4>

      <ul>
      <% @booking.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cc_number, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cc_number, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cc_cvc, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cc_cvc, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cc_exp_mon, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cc_exp_mon, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cc_exp_yr, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cc_exp_yr, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :buyer_age_confirmed, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :buyer_age_confirmed, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :total_cost, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :total_cost, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
