
<% if @booking.errors.any? %>
<div class="alert alert-danger alert-dismissable" role="alert">
  <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
  <h4><%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being saved:</h4>

  <ul>
    <% @booking.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group">
  <%= f.label :name, class: "control-label" %>
  <%= f.text_field :name, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :email, class: "control-label" %>
  <%= f.text_field :email, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :cc_number, class: "control-label" do %>
    Credit Card Number
  <% end %>
  <%= f.text_field :cc_number, class: "form-control", size: "20", :filtered => true %>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="form-group">
      <%= f.label :cc_cvc, class: "control-label" do %>
        CVC
      <% end %>
      <%= f.text_field :cc_cvc, class: "form-control" %>
    </div>
  </div>
  <!-- Expiration Date -->
  <div class="col-md-4">
    <div class="form-group">
      <%= f.label :cc_exp_mon, class: "control-label" do %>
        Exp Month
      <% end %>
      <%= f.select :cc_exp_mon, options_for_select(@months),
          {},
          {:class => 'form-control'} %>
    </div>
  </div>
  <div class="col-md-4">
    <div class="form-group">
      <%= f.label :cc_exp_yr, class: "control-label" do %>
        Exp Year
      <% end %>
      <%= f.select :cc_exp_yr, options_for_select(@years),
          {},
          {:class => 'form-control'} %>
    </div>
  </div>
</div>

<% if @movie.rating == "R" %>
  <div class="checkbox">
    <label>
      <%= f.check_box :buyer_age_confirmed %> This movie is rated R. Please confirm you are over 18 years of age.
    </label>
  </div>
<% end %>

