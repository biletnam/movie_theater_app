<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-10 col-md-offset-1">
      <div class="movie-app-page-header">
        <h1>Payment Details</h1>
      </div>
    </div>
  </div>
  <br>

  <%= form_for(@booking, html: { class: "form", role: "form" }) do |f| %>
    <% @tickets.each do |k,v| %>
      <%= hidden_field_tag "tickets[#{k}]", v %>
    <% end %>
    <%= hidden_field_tag "showing_id", @showing_id %>
  <div class="row">
    <div class="col-xs-12 col-md-10 col-md-offset-1">
      <div class="row">
        <div class="col-md-2">
            <%= render 'showings/movie_showing_information', :@showing => @showing %>
        </div>
        <div class="col-md-6">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">Payment Details</h3>
            </div>
            <div class="panel-body">
              <%= render 'form', :f => f %>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">Purchase</h3>
            </div>
            <div class="panel-body">
              <%= render 'bookings/ticket_information', :@tickets => @tickets %>
              <h2 class="no-margin-top">
                <small>Total </small>
              </h2>
              <h2 class="no-margin-top">
                <span id="total-amount"><%= number_to_currency(@total_cost) %></span>
              </h2>
              <hr/>
              <%= f.submit "Complete Purchase", class: "btn btn-lg time-button" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
