<div class="row">
  <div class="col-xs-12 col-md-10 col-md-offset-1">
    <div class="movie-app-page-header">
      <h1>Checkout</h1>
    </div>
  </div>
</div>
<br>
<div class="row">
  <div class="col-xs-12 col-md-10 col-md-offset-1">
    <div class="row">
      <div class="col-md-2">
        <%= image_tag @showing.movie.image_url, height: 150 %>
        <h4>
          <strong><%= @showing.movie.name %></strong>
        </h4>
        <h5><%= @showing.time_slot.strftime('%b %d at %I:%M %p') %></h5>
        <h5><%= @showing.screening_room.movie_theater.name %></h5>
        <h5>Theater #<%= @showing.screening_room.theater_number %></h5>
      </div>
      <%= form_tag(new_booking_url, method: :get) do %>
        <%= hidden_field_tag :showing_id, @showing.id %>
        <%= hidden_field_tag :movie_theater_id, @showing.screening_room.movie_theater.id %>
        <div class="col-md-6">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">How many tickets would you like?</h3>
            </div>
            <div class="panel-body">
              <% @showing.screening_room.movie_theater.ticket_offerings.each do |ticket_type| %>
              <div class="row">
                <div class="col-xs-12 col-md-6 text-center">
                  <p>
                    <strong><%= ticket_type.name %></strong>
                  </p>
                  <p><%= number_to_currency(ticket_type.price) %> x</p>
                </div>
                <div class="col-xs-12 col-md-6 text-center">
                  <p>
                    <strong>Quantity</strong>
                  </p>
                  <p>
                  <div class="form-group text-center">
                    <%= select_tag "ticket[#{ticket_type.id}]", options_for_select(0..10), {:class => 'form-control'} %>
                  </div>
                  </p>
                </div>
              </div>
              <hr/>
              <% end %>
            </div>

            <ul class="list-group">
            </ul>
          </div>
        </div>
        <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">Purchase</h3>
            </div>
            <div class="panel-body">
              <h2 class="no-margin-top">
                <small>Total </small>
              </h2>
              <h2 class="no-margin-top">
                $12.65
              </h2>
              <hr/>
              <%= submit_tag "Checkout", class: "btn btn-lg btn-block time-button" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

