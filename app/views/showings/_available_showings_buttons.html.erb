<% movie.showings.each do |showing| %>
  <% if showing.time_slot.day == Date.today.day && showing.seats_available == true %>

    <%= link_to showing, class: "btn btn-lg time-button" do %>
      <%= showing.time_slot.strftime('%I:%M %p') %>
    <% end %>

  <% elsif showing.time_slot.day == Date.today.day && showing.seats_available == false %>

    <%= link_to showing, class: "btn btn-lg time-button", disabled: "disabled" do %>
      <%= showing.time_slot.strftime('%I:%M %p') %>
    <% end %>

  <% end %>
<% end %>
