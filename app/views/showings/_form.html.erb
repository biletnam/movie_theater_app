<%= form_for(@showing, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @showing.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@showing.errors.count, "error") %> prohibited this showing from being saved:</h4>

      <ul>
      <% @showing.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :time_slot, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :time_slot, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :seats_available, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :seats_available, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :screening_room_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :screening_room_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :movie_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :movie_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
